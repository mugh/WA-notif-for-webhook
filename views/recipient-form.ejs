<%- include('partials/header') %>

<div class="mt-4 mb-4">
  <h2><%= isNew ? 'Add New' : 'Edit' %> Recipient</h2>
</div>

<div class="card">
  <div class="card-body">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
    <% } %>
    
    <form action="<%= isNew ? '/recipients' : '/recipients/' + recipient.id %>" method="POST">
      <div class="form-group mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" 
               value="<%= isNew ? '' : recipient.name %>" required>
        <small class="form-text text-muted">A descriptive name for this recipient</small>
      </div>
      
      <div class="form-group mb-3">
        <label for="number" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="number" name="number" 
               value="<%= isNew ? '' : recipient.number %>" required>
        <small class="form-text text-muted">WhatsApp number with country code (e.g., 628xxxxxxxxxx)</small>
      </div>
      
      <div class="form-check mb-4">
        <input type="checkbox" class="form-check-input" id="active" name="active"
               <%= (isNew || recipient.active) ? 'checked' : '' %>>
        <label class="form-check-label" for="active">Active</label>
        <small class="form-text text-muted d-block">Only active recipients will receive messages</small>
      </div>
      
      <div class="mt-4">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save"></i> <%= isNew ? 'Add' : 'Update' %> Recipient
        </button>
        <a href="/recipients" class="btn btn-secondary ms-2">
          <i class="fas fa-times"></i> Cancel
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %> 