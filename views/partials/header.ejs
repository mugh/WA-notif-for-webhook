<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WhatsApp Webhook Manager</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <header class="header">
    <h1>WhatsApp Webhook Manager</h1>
    <% if (typeof user !== 'undefined' && user) { %>
      <nav class="nav">
        <a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="/recipients"><i class="fas fa-users"></i> Recipients</a>
        <a href="/test"><i class="fas fa-paper-plane"></i> Test Message</a>
        <a href="/qrcode"><i class="fas fa-qrcode"></i> QR Code</a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </nav>
    <% } %>
  </header>
  <div class="container">
    <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-<%= message.type %>">
        <%= message.text %>
      </div>
    <% } %> 