<%- include('partials/header') %>

<h2 class="mt-4 mb-4">Dashboard</h2>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        WhatsApp Status
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <strong>Status:</strong> 
            <span class="instance-status status-<%= connectionStatus.toLowerCase() %>">
              <%= connectionStatus %>
            </span>
          </div>
          <% if (connectionStatus === 'connected') { %>
            <a href="/disconnect" class="btn btn-sm btn-danger">
              <i class="fas fa-unlink"></i> Disconnect
            </a>
          <% } else { %>
            <a href="/qrcode" class="btn btn-sm btn-primary">
              <i class="fas fa-qrcode"></i> Connect
            </a>
          <% } %>
        </div>
        
        <% if (lastConnected) { %>
          <p><strong>Last Connected:</strong> <%= new Date(lastConnected).toLocaleString() %></p>
        <% } %>
        
        <p><strong>Message Queue:</strong> <%= queueLength %> pending messages</p>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        Recipients
      </div>
      <div class="card-body">
        <p>Total Recipients: <strong><%= recipientsCount %></strong></p>
        <p>Active Recipients: <strong><%= activeRecipientsCount %></strong></p>
        <a href="/recipients" class="btn btn-primary">Manage Recipients</a>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        Quick Actions
      </div>
      <div class="card-body">
        <div class="d-flex flex-wrap gap-2">
          <a href="/recipients/new" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Add Recipient
          </a>
          
          <a href="/test" class="btn btn-info">
            <i class="fas fa-paper-plane"></i> Send Test Message
          </a>
          
          <a href="/qrcode" class="btn btn-primary">
            <i class="fas fa-qrcode"></i> Scan QR Code
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        Webhook Information
      </div>
      <div class="card-body">
        <p>Send webhook requests to the following endpoint to forward messages to all active recipients:</p>
        
        <div class="input-group mb-3">
          <input type="text" class="form-control" value="http://your-server/webhook" readonly>
          <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('http://your-server/webhook')">
            <i class="fas fa-copy"></i>
          </button>
        </div>
        
        <p class="mt-3">Example payload:</p>
        <pre class="bg-light p-3 rounded"><code>{
  "message": "Hello from webhook!"
}</code></pre>
      </div>
    </div>
  </div>
</div>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    alert('Copied to clipboard!');
  }, function(err) {
    console.error('Could not copy text: ', err);
  });
}
</script>

<%- include('partials/footer') %> 